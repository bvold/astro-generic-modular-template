---
import AreaChooser from '../components/AreaChooser.astro';
import Header from '../components/Header.astro';
import LeftNavigation from '../components/LeftNavigation.astro';
import MainContent from '../components/MainContent.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title || "Your Site Title"}</title>
  </head>
  <body>
    <div class="layout">
      <div class="area-chooser"><AreaChooser /></div>
      <div class="header"><Header /></div>
      <div class="nav"><LeftNavigation /></div>
      <div class="main">
        <MainContent title={title}>
          <slot />
        </MainContent>
      </div>
      <div class="footer"><Footer /></div>
    </div>
  </body>
</html>

<style>
  .layout {
    display: grid;
    grid-template-areas:
      "chooser header header"
      "nav main main"
      "footer footer footer";
    grid-template-columns: auto 1fr 1fr;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
  }

  .area-chooser {
    grid-area: chooser;
  }

  .header {
    grid-area: header;
  }

  .nav {
    grid-area: nav;
  }

  .main {
    grid-area: main;
  }

  .footer {
    grid-area: footer;
  }
</style>